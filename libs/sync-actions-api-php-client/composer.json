{
    "name": "keboola/sync-actions-client",
    "description": "Sync actions PHP Client",
    "keywords": [
        "keboola",
        "php",
        "client",
        "api",
        "sync-actions"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.8",
        "psr/log": "^3.0",
        "symfony/config": "^7.3",
        "symfony/validator": "^7.3"
    },
    "require-dev": {
        "keboola/coding-standard": ">=16.0",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.3",
        "symfony/process": "^7.3",
        "symfony/dotenv": "^7.3",
        "monolog/monolog": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\SyncActionsClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\SyncActionsClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcbf": "phpcbf --extensions=php src tests",
        "phpunit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-clover /tmp/build-logs/clover.xml --coverage-xml=/tmp/build-logs/coverage-xml --log-junit=/tmp/build-logs/phpunit.junit.xml"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "config": {
        "lock": false,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    }
}
