{
    "name": "keboola/k8s-client",
    "type": "library",
    "license": "MIT",
    "description": "Keboola K8S client library",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\K8sClient\\": "src/",
            "Kubernetes\\": "libs/kubernetes-php-client/src",
            "KubernetesRuntime\\": "libs/kubernetes-php-runtime/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\K8sClient\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.7",
        "guzzlehttp/psr7": "<2.0",
        "keboola/retry": "^0.5.1",
        "monolog/monolog": "^3.3",
        "phpdocumentor/reflection-docblock": "^5.3",
        "psr/log": "^3.0",
        "symfony/property-info": "^6.3"
    },
    "require-dev": {
        "keboola/coding-standard": "^14.0",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.5",
        "sempro/phpunit-pretty-print": "^1.4",
        "symfony/dotenv": "^6.2",
        "symfony/filesystem": "^6.3",
        "symfony/monolog-bridge": "^6.3"
    },
    "config": {
        "sort-packages": true,
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "phpcs": "phpcs -n --ignore=vendor,cache,Kernel.php --extensions=php .",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "tests": "phpunit"
    }
}
