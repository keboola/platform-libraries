{
    "name": "keboola/staging-provider",
    "license": "MIT",
    "type": "library",
    "description": "",
    "keywords": ["keboola", "staging-provider"],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\StagingProvider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\StagingProvider\\Tests\\": "tests/"
        }
    },
    "repositories": {
        "libs": {
            "type": "path",
            "url": "../../libs/*"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "keboola/input-mapping": "*@dev",
        "keboola/output-mapping": "*@dev",
        "keboola/storage-api-client": "dev-KBC-3081-async-ws-configuration-create as 14.5.0",
        "keboola/storage-api-php-client-branch-wrapper": "^3.1"
    },
    "require-dev": {
        "keboola/coding-standard": ">=14.0",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.5",
        "sempro/phpunit-pretty-print": "^1.4",
        "symfony/dotenv": "^5.2|^6.0"
    },
    "scripts": {
        "tests": "phpunit --coverage-clover build/logs/clover.xml --coverage-xml=build/logs/coverage-xml --log-junit=build/logs/phpunit.junit.xml",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "build": [
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 3600,
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
