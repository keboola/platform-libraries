{
    "name": "keboola/php-test-utils",
    "license": "MIT",
    "type": "library",
    "description": "PHP test utilities skeleton.",
    "keywords": [
        "keboola",
        "php",
        "test",
        "utils"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\PhpTestUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\PhpTestUtils\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "infection/infection": "^0.31",
        "keboola/coding-standard": ">=14.0.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.3",
        "symfony/dotenv": "^7.0|^8.0"
    },
    "scripts": {
        "tests": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-clover build/logs/clover.xml --coverage-xml=build/logs/coverage-xml --log-junit=build/logs/phpunit.junit.xml"
        ],
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "infection": "infection --threads=2 --min-covered-msi=90 --coverage=build/logs",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests",
            "@infection"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "lock": false,
        "process-timeout": 3600,
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}


